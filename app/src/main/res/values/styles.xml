<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!-- Custom Style for Title -->
    <style name="TitleStyle" parent="android:Widget.TextView">
        <item name="android:typeface">sans</item>
        <item name="fontFamily">serif</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!-- Custom Style for Description -->
    <style name="DescriptionStyle" parent="android:Widget.TextView">
        <item name="android:typeface">sans</item>
        <item name="fontFamily">serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

</resources>
